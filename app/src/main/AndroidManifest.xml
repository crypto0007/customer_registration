        android:theme="@style/Theme.Customer_registration">
        <activity android:name=".AboutUs">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Termsandconditions" />
        <activity android:name=".Privacypolicy">

        </activity>
        <activity android:name=".QuerySupport">

        </activity>
        <activity android:name=".ServiceHistory">

        </activity>
        <activity android:name=".ProductList" />
        <activity android:name=".Signature" />
        <activity android:name=".ServiceCompletion" />
        <activity android:name=".ServiceReschedule" />
        <activity android:name=".ServiceSchedule" />
        <activity android:name=".ServiceReAllocatePopup" />
        <activity android:name=".ServiceAllocatePopup" />
        <activity android:name=".ServiceRequest" />
        <activity android:name=".ServiceInformation" />
        <activity
            android:name=".AddProduct"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".Search_Customer"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".MainActivity"
            android:windowSoftInputMode="adjustResize" />
    </application>

</manifest>