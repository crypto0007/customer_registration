<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ServiceHistory"
    android:orientation="vertical"
    android:background="@drawable/bb">

    <LinearLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/yellow"
        tools:ignore="MissingConstraints"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/backarrowsrvhis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            />


        <TextView
            android:id="@+id/logo"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/Srvice"
            android:textColor="@color/black"
            android:layout_gravity="center" />

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:ignore="UselessParent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/etsrvhissearch"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="24dp"
                    android:textColorHint="@color/colorWhite"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/input_bg"
                    android:drawableStart="@drawable/ic_search"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:hint="@string/search"
                    android:inputType="textPersonName"
                    android:paddingStart="20dp"
                    android:paddingTop="10dp"
                    android:paddingEnd="5dp"
                    android:layout_weight="0.5"
                    android:paddingBottom="10dp"
                    />

                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="10dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/btsrvhisfil"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:src="@drawable/filter"
                        android:layout_weight="0.5"/>
                </LinearLayout>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/srvhislayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp"
                app:cardUseCompatPadding="true"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="2">

                    <LinearLayout
                        android:id="@+id/linearLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <EditText
                            android:singleLine="true"
                            android:id="@+id/editsrvhisstartdate"
                            android:focusable="false"
                            android:hint="@string/srvsrtdate"
                            android:drawableEnd="@drawable/ic_calendarr_black"
                            android:inputType="date"
                            android:layout_width="0dp"
                            android:layout_weight="0.5"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="8dp"
                            android:clickable="true"
                            android:cursorVisible="false"
                            android:focusableInTouchMode="false"
                            android:background="@drawable/border_text_black"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            tools:ignore="RtlSymmetry"
                            android:textSize="15sp"/>


                        <EditText
                            android:singleLine="true"
                            android:id="@+id/editsrvhisenddate"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="10dp"
                            android:focusable="false"
                            android:hint="@string/srvenddate"
                            android:drawableEnd="@drawable/ic_calendarr_black"
                            android:inputType="date"
                            android:layout_width="0dp"
                            android:layout_weight="0.5"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:cursorVisible="false"
                            android:focusableInTouchMode="false"
                            android:background="@drawable/border_text_black"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:textSize="15sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <Spinner
                            android:id="@+id/spinnersrvhissrvtype"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:autofillHints="Status"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginEnd="8dp"
                            style="@style/spinner_style_black"
                            android:paddingStart="10dp"
                            tools:ignore="RtlSymmetry"
                            />


                        <Spinner
                            android:id="@+id/spinnersrvhissrvtat"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:autofillHints="Status"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginEnd="10dp"
                            style="@style/spinner_style_black"
                            android:paddingStart="10dp"
                            tools:ignore="RtlSymmetry" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/btnsrvfilapp"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:drawablePadding="10dp"
                        android:background="@drawable/btn_bg"
                        android:text="@string/apply"
                        android:textAllCaps="false"
                        android:layout_gravity="center"
                        android:layout_weight="0.5"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/srv_his_my_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none" />

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>